<form id="new" method="post" action="/new">
  <fieldset>
    <legend><h3>Add Run</h3></legend>
    <div>
      <label for="name">Name:</label>
      <br>
      <input name="name" type="text" value="<%= params[:name] %>">
    </div>
    <div>
      <label for="distance">Distance:</label>
      <br>
      <input name="distance" type="number" step="0.01" min="0" max="1000" placeholder="miles" value="<%= params[:distance] %>">
    </div>
    <div>
      <label for="duration">Duration:</label>
      <br>
      <input name="duration" type="text" placeholder="hh:mm:ss" value="<%= params[:duration] %>">
    </div>
    <div>
      <label for="date">Date:</label>
      <br>
      <input name="date" type="date" min= "1900-01-01" max="<%= Time.now.stamp("2017-07-15") %>" required value="<%= params[:date] %>">
    </div>
    <div>
      <label for="time">Time</label>
      <br>
      <input name="time" type="time" required value="<%= params[:time] %>">
    </div>
    <fieldset class="actions">
      <input type="submit" value="Add">
      <a href="<%= request.referer %>">Cancel</a>
    </fieldset>
  </fieldset>
</form>
