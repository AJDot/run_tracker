<form method="post" action="/add">
  <fieldset>
    <legend><h3>Add Run</h3></legend>
    <div>
      <label for="name">Name:</label>
      <br>
      <input name="name" type="text">
    </div>
    <div>
      <label for="distance">Distance:</label>
      <br>
      <input name="distance" type="number" step="0.01" min="0" placeholder="miles">
    </div>
    <div>
      <label for="duration">Duration:</label>
      <br>
      <input name="duration" type="text" placeholder="hh:mm:ss">
    </div>
    <div>
      <label for="date">Date:</label>
      <br>
      <input name="date" type="date" max="<%= Time.now.stamp("2017-07-15") %>" >
    </div>
    <div>
      <label for="time">Time</label>
      <br>
      <input name="time" type="time" >
    </div>
    <input type="submit" value="Add">
    <a class="action" href="/">Cancel</a>
  </fieldset>
</form>
