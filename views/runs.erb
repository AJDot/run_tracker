<ul class="run heading">
  <li class="name">Name</li>
  <li class="distance">Distance</li>
  <li class="duration">Duration</li>
  <li class="date">Date</li>
  <li class="time">Time</li>
</ul>
<% sort_by_attribute(@runs, :id).each do |run| %>
  <ul class="run">
    <li class="name"><%= run[:name] %></li>
    <li class="distance"><%= run[:distance] %></li>
    <li class="duration"><%= run[:duration] %></li>
    <li class="date"><%= run[:date] %></li>
    <li class="time"><%= run[:time] %></li>
    <form method="post" action="/<%= run[:id] %>/delete">
      <a class="action edit" href="/runs/<%= run[:id] %>/edit">Edit</a>
      <button class="action delete" type="submit">Delete</button>
    </form>
  </ul>
<% end %>

<% content_for :header_links do %>
  <a href="/new">Add Run</a>
  <a href="/data/runs.yml" download="runs.yml">Download Runs</a>
  <form id="upload" method="post" action="/upload" enctype="multipart/form-data">
    <button type="submit">Upload</button>
    <input type="file" name="file" id="file" accept=".yml">
    <!-- <label for="file">Choose a file</label> -->
  </form>
<% end %>
