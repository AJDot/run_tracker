<doctype! html>
<html>
<head>
  <title>Run Tracker</title>
  <meta charset="utf-8">
  <link href="https://fonts.googleapis.com/css?family=Lato|Raleway" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/stylesheets/whitespace-reset.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/run_tracker.css">
</head>
<body>
  <header>
    <h1><a href="/">Run Tracker</a></h1>
    <div class="actions">
      <%== yield_content :header_links %>
    </div>
  </header>

  <% if session[:success] %>
    <div class="flash success">
      <p><%= session.delete(:success) %></p>
    </div>
  <% end %>

  <% if session[:error] %>
    <div class="flash error">
      <p><%= session.delete(:error) %></p>
    </div>
  <% end %>

  <main>
    <%== yield %>
  </main>
</body>
</html>
